<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_background"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.5"
        android:padding="40dp">

        <ImageView
            android:id="@+id/album_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/unorthodox_jukebox_cover"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="2.5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:alpha="0.8"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Just the way you are"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginLeft="12dp"
                android:id="@+id/artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bruno Mars"
                android:textSize="12dp"
                android:textColor="#FFF"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12dp"
                android:textColor="#FFF"
                android:textStyle="bold"/>
            <TextView
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unorthodox Jukebox"
                android:textSize="12dp"
                android:textColor="#FFF"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_previous_song"/>
            <ImageView
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_button"/>
            <ImageView
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_next_song"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>